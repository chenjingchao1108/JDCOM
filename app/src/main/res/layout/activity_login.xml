<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tooltipText="京东登录"
    tools:context="text.bwie.mrc.jdcom.ViewActivity.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        >

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="京东登录"
            android:textSize="16dp"
            android:textStyle="bold" />
    </RelativeLayout>
<LinearLayout
    android:id="@+id/aaaa"
    android:layout_marginTop="70dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:text="账号"/>
        <EditText
            android:id="@+id/Login_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="用户名/邮箱/手机号"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:text="密码"/>
        <EditText
            android:id="@+id/Login_userpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入密码"/>
    </LinearLayout>
    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/Login_buttonup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录"
       />


    <!--<ImageView-->
            <!--android:src="@drawable/weixin"-->
            <!--android:id="@+id/Login_wiexin"-->
            <!--android:layout_width="60dp"-->
            <!--android:layout_height="60dp"-->
            <!--android:padding="10dp"-->
            <!--android:layout_marginLeft="30dp"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--/>-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/aaaa"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/Login_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingLeft="0dp"
            android:text="手机快速注册" />

        <TextView
            android:id="@+id/Login_passworddown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="忘记密码" />
    </RelativeLayout>
</LinearLayout>
    <ImageView
        android:src="@drawable/mqq"
        android:id="@+id/Login_mqq"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:text="登录代表已经同意京东条约"/>

</RelativeLayout>
