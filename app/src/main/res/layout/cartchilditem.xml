<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:background="@color/hui"
    android:layout_width="match_parent"
    android:layout_height="5dp"
    android:orientation="vertical"
    android:id="@+id/linearLayout3"></LinearLayout>
    <CheckBox

        android:id="@+id/cccb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="10dp" />

    <ImageView
        android:id="@+id/ccimg"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_toEndOf="@+id/cccb"
        android:layout_toRightOf="@+id/cccb"
        android:layout_below="@+id/linearLayout3" />

    <RelativeLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_toEndOf="@+id/ccimg"
        android:layout_toRightOf="@+id/ccimg">

        <TextView
            android:id="@+id/cctitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:lines="2"
            android:text="11111" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/ccprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="zzz"
                android:textColor="@color/red"
                android:textSize="18dp" />

            <test.bwei.com.jd.AmountView
                android:id="@+id/av"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"></test.bwei.com.jd.AmountView>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>